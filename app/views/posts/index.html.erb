<div class="span6">
<h1 align="center"> Listing posts</h1><br>


  <table class="table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-info'%></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

